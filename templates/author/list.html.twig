{% set nb=0 %}
{% set nbbooktotal=0 %}
{% if authors is empty %}
<h1>Tableau Vide</h1>
{% else %}
{% for author in authors %}
<div class="container">
    <p> ID:<strong>{{author.id}}</strong></p>
    <h1>Username:{{author.username | upper }}</h1>
    <img src="{{ asset(author.picture)}}" alt="{{author.id}}" class="img-fluid rounded-circle" style="width: 150px; height: 150px;">
    <p>Email:{{author.email}}</p>
    <p>Nombre de books:{{author.nb_books}}</p>

    <a href="{{path('author_details',{'id':author.id})}}">Details</a>

</div>
{% set nb=nb+1 %}
{% set nbbooktotal=nbbooktotal+author.nb_books %}

{% endfor %}
{% endif %}
<h1>Nombre total des auteurs est {{nb}}</h1>
<h1>Nombre total de books est {{nbbooktotal}}</h1>