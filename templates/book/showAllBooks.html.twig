<table class="table" border="2">
    <th>ID</th>
    <th>Title</th>
    <th>Publication Date</th>
    <th>Category</th>
    <th>Author</th>
    <th>Actions</th>

    {% for book in books %}

    <tr>
        <td>{{book.id}}</td>
        <td>{{book.title}}</td>
        <td>{{book.publicationDate | date('Y-m-d')}}</td>
        <td>{{book.category}}</td>
        <td>{{book.author.username}}</td>
        <td> <a href="{{path('deleteBook', {'id': book.id})}}">Delete</a> </td>
        <td> <a href="{{path('editBook', {'id': book.id})}}">Edit</a> </td>
    </tr>

    {% endfor %}


</table>